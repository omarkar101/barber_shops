@model Barber
<div class="container">
    <div class="row">
        <div class="col">
            <img src="@Model.IMG" alt="image">
        </div>
        <div class="col">
            <h1>@Model.FirstName @Model.LastName</h1>
            <br>
            <h4>@Model.Location</h4>
        </div>
    </div>
    <hr>
    <div class="row">
        <h4>Description:</h4>
        <br>
        <p>@Model.Description</p>
    </div>
    <hr>
    <div class="row">
        <h4>Skills:</h4>
        <br>
        <p>@Model.Skills</p>
    </div>
    <hr>
    <div class="row">
        <h4>Experience:</h4>
        <br>
        <p>@Model.Experience</p>
    </div>
    <hr>
    <div class="row">
        <h4>Accomplishments:</h4>
        <br>
        <p>@Model.Accomplishments</p>
    </div>
    <hr>
    <div class="row">
        <h4>Products:</h4>
        <br>
        <p>@Model.Products</p>
    </div>


</div>
