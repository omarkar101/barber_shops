@model IEnumerable<Barber>
@{
    ViewData["Title"] = "Home Page";
}

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

<div class="text-center">
    <h1 class="display-4 bg-dark text-light">Welcome to Barber</h1>
    <h1>@ViewBag.x</h1>
</div>
<div class="w-100">
    <img src="https://picsum.photos/200/300" alt="welcome image" style="height: 600px" width="100%">
</div>


<div>
    <div class="mb-4 align-content-start d-flex flex-wrap">
        @foreach (var barber in Model)
        {
            <div class="card m-1" style="width: 250px;" >
                <div style="text-align: center;">
                    <img class="card-img-top himage" src=@barber.IMG alt="Card image">
                </div>
                
                <div class="pl-4 card-body bg-dark">
                    <h4 class="card-title text-light border border-primary rounded text-center">@barber.FirstName @barber.LastName</h4>
                    <p class="card-text   text-light border border-primary rounded text-center">Location: @barber.Location</p>
                    <p class="card-text   text-light border border-primary rounded text-center">
                        
                        
                        @for (var i = 0; i < @barber.Rating; i++)
                        {
                            <i class="fa fa-star" style="color: gold;" aria-hidden="true"></i>
                        }
                    </p>
                    <p class="card-text  text-light border border-primary rounded text-center">Average Price: $@barber.averagePrice</p>
                    <div class="text-center">
                        <a class="btn btn-primary rounded" asp-controller="Barber" asp-action="Index" asp-route-id="@barber.Id">View</a>
                    </div>
                    </div>
            </div>
        }
    </div>
</div>
